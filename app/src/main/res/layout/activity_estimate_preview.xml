<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/estimatePreviewLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstimatePreviewActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0066cc"
        app:title="Estimate Preview"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView for content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnDownloadPdf">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Business Info -->
            <TextView
                android:id="@+id/lblBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Information"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/txtBusinessInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business name, address, contact details..."
                android:padding="4dp" />

            <!-- Customer Info -->
            <TextView
                android:id="@+id/lblCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Information"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/txtCustomerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer name, address, contact details..."
                android:padding="4dp" />

            <!-- Estimate Info -->
            <TextView
                android:id="@+id/lblEstimateDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimate Details"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/txtEstimateDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Issue Date, Expiration Date, Due Terms, etc."
                android:padding="4dp" />

            <!-- Lines / Items -->
            <TextView
                android:id="@+id/lblEstimateLines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimate Lines"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerEstimateLines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

            <!-- Totals -->
            <TextView
                android:id="@+id/lblTotals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Totals"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/txtTotals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal, VAT, Total TTC..."
                android:padding="4dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Download PDF Button -->
    <Button
        android:id="@+id/btnDownloadPdf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Download PDF"
        android:backgroundTint="#0066cc"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSendEmail"
        app:layout_constraintHorizontal_chainStyle="spread" />

    <Button
        android:id="@+id/btnSendEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send Email"
        android:backgroundTint="#008800"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnDownloadPdf"
        app:layout_constraintEnd_toStartOf="@id/btnPrint" />

    <Button
        android:id="@+id/btnPrint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Print"
        android:backgroundTint="#444444"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSendEmail"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>